<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.WellnessTracker" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <!-- Prevent Android automatic Force Dark from inverting light backgrounds to black -->
        <!-- forceDarkAllowed is provided in values-v29 to avoid minSdk issues -->

        <!-- Ensure status bar icons are visible on light backgrounds (dark icons) -->
        <item name="android:statusBarColor">@color/md_theme_light_primaryContainer</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Make navigation bar match background and use dark icons on light theme -->
        <item name="android:navigationBarColor">@color/md_theme_light_background</item>
        <!-- windowLightNavigationBar is provided in values-v27 to avoid minSdk issues -->

        <!-- Remove the framework ActionBar by default so activities use the custom header -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.WellnessTracker" parent="Base.Theme.WellnessTracker" />

    <!-- Custom card style -->
    <style name="Widget.WellnessTracker.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_margin">@dimen/margin_sm</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.WellnessTracker.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.WellnessTracker.Button.Primary" parent="Widget.WellnessTracker.Button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.WellnessTracker.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="backgroundTint">@color/secondary_100</item>
        <item name="android:textColor">@color/secondary_700</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.WellnessTracker.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WellnessTracker.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WellnessTracker.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="TextAppearance.WellnessTracker.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <!-- Provide a fallback for TextAppearance.Material3.Caption if the Material library doesn't include it -->
    <style name="TextAppearance.Material3.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <!-- Bottom navigation text styles (compact) -->
    <style name="TextAppearance.WellnessTracker.BottomNav.Active" parent="TextAppearance.WellnessTracker.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="TextAppearance.WellnessTracker.BottomNav.Inactive" parent="TextAppearance.WellnessTracker.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/neutral_700</item>
    </style>

    <!-- Bottom Navigation Style (updated) -->
    <style name="Widget.WellnessTracker.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="android:minHeight">@dimen/bottom_nav_height</item>
        <!-- breathing room -->
        <item name="itemPaddingTop">6dp</item>
        <item name="itemPaddingBottom">6dp</item>
        <!-- text appearance for active/inactive labels -->
        <item name="itemTextAppearanceActive">@style/TextAppearance.WellnessTracker.BottomNav.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.WellnessTracker.BottomNav.Inactive</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
    </style>

    <!-- Bottom Navigation Active Indicator (small/subtle) -->
    <style name="Widget.WellnessTracker.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_100</item>
        <item name="android:width">40dp</item>
        <item name="android:height">8dp</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="Widget.WellnessTracker.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_500</item>
        <item name="tint">@android:color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.WellnessTracker.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/neutral_200</item>
        <item name="indicatorColor">@color/primary_500</item>
        <item name="android:minHeight">@dimen/habit_progress_height</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.WellnessTracker.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipStrokeColor">@color/primary_300</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Splash theme used by SplashActivity -->
    <style name="Theme.WellnessTracker.Splash" parent="Theme.WellnessTracker">
        <!-- Use the app's splash drawable as the window background for fast launch -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- NoActionBar variant for activities that use a custom toolbar/header -->
    <style name="Theme.WellnessTracker.NoActionBar" parent="Theme.WellnessTracker">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>