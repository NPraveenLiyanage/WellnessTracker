<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with neutral fill and black stroke outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_200" />
            <stroke android:width="1dp" android:color="#000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Progress layer (clip) - tint this layer via progressTintList at runtime -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- base color; will be tinted by ProgressBar.progressTintList -->
                <solid android:color="@android:color/white" />
                <corners android:radius="6dp" />
            </shape>
        </clip>
    </item>
</layer-list>
