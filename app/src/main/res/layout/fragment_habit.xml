<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_secondary"
    tools:context=".ui.HabitFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_md">

            <!-- Header Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_gradient_secondary"
                app:cardCornerRadius="@dimen/card_large_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build Better Habits"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Headline"
                        android:textColor="@color/secondary_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:text="Track your daily habits and build a healthier lifestyle"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                        android:textColor="@color/secondary_600" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Progress Overview -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overall Progress"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="63%"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                            android:textColor="@color/primary_500"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        style="@style/Widget.WellnessTracker.ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:progress="63" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Habits -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Habits"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                            android:drawableStart="@drawable/ic_habits_24"
                            android:drawablePadding="@dimen/padding_sm"
                            android:drawableTint="@color/secondary_500" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.WellnessTracker.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/8 Done"
                            android:textSize="@dimen/text_size_caption" />

                    </LinearLayout>

                    <!-- Sample Habit Items (static placeholders) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:orientation="vertical">

                        <!-- Habit Item 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_item_height_small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="@dimen/padding_sm">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="@dimen/habit_checkbox_size"
                                android:layout_height="@dimen/habit_checkbox_size"
                                android:checked="true"
                                app:buttonTint="@color/primary_500" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_md"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Drink 8 glasses of water"
                                    android:textAppearance="@style/TextAppearance.WellnessTracker.Body" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal: 8 glasses â€¢ Current: 6 glasses"
                                    android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’§"
                                android:textSize="@dimen/icon_size_large" />

                        </LinearLayout>

                        <!-- Habit Item 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_item_height_small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="@dimen/padding_sm">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="@dimen/habit_checkbox_size"
                                android:layout_height="@dimen/habit_checkbox_size"
                                android:checked="false"
                                app:buttonTint="@color/primary_500" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_md"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30 minutes exercise"
                                    android:textAppearance="@style/TextAppearance.WellnessTracker.Body" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal: 30 min â€¢ Current: 0 min"
                                    android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸƒâ€â™‚ï¸"
                                android:textSize="@dimen/icon_size_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- View All Habits Button -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:text="View All Habits"
                        app:strokeColor="@color/primary_300"
                        android:textColor="@color/primary_500" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weekly Progress Chart -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Progress"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                        android:drawableStart="@drawable/ic_habits_24"
                        android:drawablePadding="@dimen/padding_sm"
                        android:drawableTint="@color/accent_500" />

                    <!-- Weekly Chart Placeholder -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/margin_md"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:baselineAligned="false">

                        <!-- Day column: use a container with match_parent width so inner fixed-width bar isn't considered 'invisible' by lint -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Mon"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Tue -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="95dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_400" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Tue"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Wed -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Wed"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Thu -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_500" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Thu"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Fri -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="85dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_400" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Fri"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Sat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_200" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Sat"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Sun -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="75dp"
                                    android:layout_gravity="center"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="Sun"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button anchored in CoordinatorLayout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        style="@style/Widget.WellnessTracker.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add"
        app:srcCompat="@drawable/ic_add_24"
        app:layout_anchor="@id/scroll"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="@dimen/margin_lg" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
