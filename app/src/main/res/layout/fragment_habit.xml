<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_secondary"
    tools:context=".ui.HabitFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_md">

            <!-- Header Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_gradient_secondary"
                app:cardCornerRadius="@dimen/card_large_corner_radius"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/build_better_habits"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Headline"
                        android:textColor="@color/secondary_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:text="@string/habit_header_desc"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                        android:textColor="@color/secondary_600" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Progress Overview -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textProgressLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/overall_progress"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Title" />

                        <TextView
                            android:id="@+id/textProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_percent"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                            android:textColor="@color/primary_500"
                            android:textStyle="bold"
                            tools:text="63%" />

                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        style="@style/Widget.WellnessTracker.ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        tools:progress="63" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Habits -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/todays_habits"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                            app:drawableStartCompat="@drawable/ic_habits_24"
                            android:drawablePadding="@dimen/padding_sm"
                            app:drawableTint="@color/secondary_500" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSummary"
                            style="@style/Widget.WellnessTracker.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5/8 Done"
                            android:textSize="@dimen/text_size_caption" />

                    </LinearLayout>

                    <!-- RecyclerView to display today's habits -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerHabits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:overScrollMode="ifContentScrolls"
                        android:nestedScrollingEnabled="false" />

                    <!-- Empty state -->
                    <TextView
                        android:id="@+id/textEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:text="@string/empty_habits"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Caption"
                        android:textAlignment="center"
                        android:visibility="gone" />

                    <!-- View All Habits Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllHabits"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:text="@string/view_all_habits"
                        app:strokeColor="@color/primary_300"
                        android:textColor="@color/primary_500" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weekly Progress Chart -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.WellnessTracker.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_progress"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                        app:drawableStartCompat="@drawable/ic_habits_24"
                        android:drawablePadding="@dimen/padding_sm"
                        app:drawableTint="@color/accent_500" />

                    <!-- Weekly Chart Placeholder -->
                    <LinearLayout
                        android:id="@+id/weeklyChartContainer"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/margin_md"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:baselineAligned="false">

                        <!-- Each day column: weight=1, FrameLayout fills available vertical space -->

                        <!-- Monday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_mon"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_mon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/mon"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Tuesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_tue"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_400" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_tue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/tue"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Wednesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_wed"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_wed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/wed"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Thursday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_thu"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_500" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_thu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/thu"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Friday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_fri"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_400" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_fri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/fri"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Saturday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_sat"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_200" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_sat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/sat"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                        <!-- Sunday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom|center_horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <View
                                    android:id="@+id/bar_sun"
                                    android:layout_width="20dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:background="@color/primary_300" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/label_sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:text="@string/sun"
                                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/weekly_debug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Caption"
                        android:textColor="@color/secondary_600"
                        android:text="" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button anchored in CoordinatorLayout -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        style="@style/Widget.WellnessTracker.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add"
        app:srcCompat="@drawable/ic_add_24"
        app:layout_anchor="@id/scroll"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="@dimen/margin_lg"
        android:clickable="true"
        android:focusable="true"
        android:translationZ="20dp"
        android:elevation="20dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
