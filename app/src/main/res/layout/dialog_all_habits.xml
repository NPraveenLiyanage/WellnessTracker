<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/dialog_blue_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dialogAllTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Habits"
                android:textColor="@color/dialog_blue_text"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/dialogAllSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View and manage all saved habits"
            android:textColor="@color/text_secondary_light"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAllHabits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="ifContentScrolls"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
