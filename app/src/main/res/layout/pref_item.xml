<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:minHeight="56dp">

    <!-- Left: title + summary stacked -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
            android:layout_marginBottom="2dp"
            android:textColor="@color/text_primary_light" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
            android:alpha="0.95"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_secondary_light" />
    </LinearLayout>

    <!-- Right: widget frame for Preference's widgetLayout -->
    <FrameLayout
        android:id="@android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:foregroundGravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

</LinearLayout>
