<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_gradient_primary"
    android:padding="12dp">

    <!-- Header (use plain LinearLayout instead of CardView for RemoteViews) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/header_card_background"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/trans_logo"
            android:contentDescription="@string/app_logo"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wellness Tracker"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primary_700" />

            <TextView
                android:id="@+id/tv_widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today â€¢ Stay Healthy"
                android:textSize="12sp"
                android:textColor="@color/primary_500"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Mood & Steps (plain layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/mood_gradient_bg">

        <TextView
            android:id="@+id/tv_widget_mood_emoji_top"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="ðŸ˜Š"
            android:textSize="24sp"
            android:background="@drawable/mood_circle_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_widget_mood_text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling Great!"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/primary_700"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest mood entry"
                android:textSize="12sp"
                android:textColor="@color/primary_500"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/steps_badge_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘£"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_widget_steps_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Habits Progress (plain layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/habits_gradient_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Habits"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_line"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text=""
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/tv_widget_habits_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>
