<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_lg"
        android:background="@color/surface_light">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_lg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pick_mood"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                android:textColor="@color/primary_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emoji_happy"
                android:textSize="24sp"
                android:contentDescription="@string/emoji_profile" />

        </LinearLayout>

        <!-- Prompt -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_mood"
            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
            android:layout_marginBottom="@dimen/margin_md" />

        <!-- Emoji rows container: we will add two centered horizontal rows at runtime for balanced layout -->
        <LinearLayout
            android:id="@+id/emoji_rows_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_lg" />

        <!-- Intensity label + slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_intensity_label"
            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
            android:layout_marginBottom="@dimen/margin_sm" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_mood_intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="10"
            android:stepSize="1"
            android:value="5"
            app:thumbColor="@color/primary_500"
            app:trackColorActive="@color/primary_500"
            app:trackColorInactive="@color/primary_200"
            android:layout_marginBottom="@dimen/margin_lg" />

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note_optional"
            app:boxStrokeColor="@color/primary_500"
            app:hintTextColor="@android:color/black"
            android:layout_marginBottom="@dimen/margin_lg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginEnd="@dimen/margin_sm"
                android:backgroundTint="@color/dialog_red_bg"
                android:textColor="@color/dialog_red_text"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/Widget.WellnessTracker.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                app:icon="@drawable/ic_mood_24"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
