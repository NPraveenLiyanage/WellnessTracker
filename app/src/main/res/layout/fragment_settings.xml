<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_md">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.WellnessTracker.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_gradient_accent"
            app:cardCornerRadius="@dimen/card_large_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_settings"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Headline"
                    android:textColor="@color/accent_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:text="@string/settings_subtitle"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                    android:textColor="@color/accent_600" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Profile -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.WellnessTracker.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_profile"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                    app:drawableStartCompat="@drawable/ic_settings_24"
                    android:drawablePadding="@dimen/padding_sm"
                    app:drawableTint="@color/primary_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_md"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/padding_sm">

                    <TextView
                        android:layout_width="@dimen/icon_size_xl"
                        android:layout_height="@dimen/icon_size_xl"
                        android:text="@string/emoji_profile"
                        android:textSize="@dimen/text_size_display"
                        android:gravity="center"
                        android:background="@drawable/mood_item_background" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_name"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_profile_information"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chevron"
                        android:textSize="@dimen/text_size_title"
                        android:textColor="@color/neutral_400" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Notifications -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.WellnessTracker.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_notifications"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                    app:drawableStartCompat="@drawable/ic_settings_24"
                    android:drawablePadding="@dimen/padding_sm"
                    app:drawableTint="@color/secondary_500" />

                <!-- Daily Reminders -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_md"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_sm">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_reminders"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Body" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_reminders_summary"
                            android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/primary_500"
                        app:trackTint="@color/primary_200" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Appearance (minimal) -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.WellnessTracker.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_appearance"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                    app:drawableStartCompat="@drawable/ic_settings_24"
                    android:drawablePadding="@dimen/padding_sm"
                    app:drawableTint="@color/accent_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_md"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/padding_sm">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_theme"
                        android:textAppearance="@style/TextAppearance.WellnessTracker.Body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chevron"
                        android:textColor="@color/neutral_400" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
