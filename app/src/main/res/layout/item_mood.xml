<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_md"
        android:gravity="center_vertical">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/tv_mood_emoji"
            android:layout_width="@dimen/mood_item_size"
            android:layout_height="@dimen/mood_item_size"
            android:text="ðŸ˜Š"
            android:textSize="@dimen/mood_emoji_size"
            android:gravity="center"
            android:background="@drawable/mood_item_background" />

        <!-- Mood Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_md"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_mood_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Happy"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mood_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Caption"
                    android:textColor="@color/primary_500" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_mood_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/tv_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feeling great after morning workout!"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                android:layout_marginTop="@dimen/margin_sm"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Mood Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_mood_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                android:textColor="@color/primary_500"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/10"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
