<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/background_light_secondary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_md"
        android:gravity="center_vertical">

        <!-- Mood Emoji -->
        <TextView
            android:id="@+id/tv_mood_emoji"
            android:layout_width="@dimen/mood_item_size"
            android:layout_height="@dimen/mood_item_size"
            android:text="@string/emoji_happy"
            android:textSize="@dimen/mood_emoji_size"
            android:gravity="center"
            android:background="@drawable/mood_item_background" />

        <!-- Vertical container: three rows -> top: name+rating, middle: note, bottom: timestamp -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_md"
            android:orientation="vertical">

            <!-- Top row: name on the left, rating aligned to end -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_mood_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mood_name_default"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                    android:textStyle="bold" />

                <!-- Rating on the far right of top row -->
                <TextView
                    android:id="@+id/tv_mood_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_md"
                    android:text="@string/mood_rating_default"
                    android:textAppearance="@style/TextAppearance.WellnessTracker.Title"
                    android:textColor="@color/primary_500"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Middle row: full-width note (shows the note text) -->
            <TextView
                android:id="@+id/tv_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xs"
                android:text="@string/mood_sample_note"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Body"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="visible" />

            <!-- Bottom row: friendly timestamp -->
            <TextView
                android:id="@+id/tv_mood_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xs"
                android:text="@string/mood_sample_timestamp"
                android:textAppearance="@style/TextAppearance.WellnessTracker.Caption"
                android:textColor="@color/primary_500" />

            <!-- Hidden raw timestamp (set at runtime with ISO/raw value for copy/share) -->
            <TextView
                android:id="@+id/tv_mood_timestamp_raw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/mood_sample_timestamp_raw" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
