<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Wellness Theme -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_card_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Title with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings_wellness"
                    app:tint="#4A90E2"
                    android:contentDescription="@string/settings_icon_desc"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wellness_settings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customize_wellness_journey"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Wellness Icons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/icons_row_background"
            android:padding="16dp"
            android:elevation="2dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_heart_health"
                    app:tint="#E74C3C"
                    android:background="@drawable/circle_background_red"
                    android:padding="8dp"
                    android:contentDescription="@string/health_tracking_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/health"
                    android:textSize="12sp"
                    android:textColor="#E74C3C"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fitness"
                    app:tint="#27AE60"
                    android:background="@drawable/circle_background_green"
                    android:padding="8dp"
                    android:contentDescription="@string/fitness_tracking_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fitness"
                    android:textSize="12sp"
                    android:textColor="#27AE60"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mindfulness"
                    app:tint="#4A90E2"
                    android:background="@drawable/circle_background_blue"
                    android:padding="8dp"
                    android:contentDescription="@string/mindfulness_practices_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mind"
                    android:textSize="12sp"
                    android:textColor="#4A90E2"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hydration Section Header (separates the two sections visibly) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hydration"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2C3E50"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Hydration: Reminder Toggle Card -->
        <LinearLayout
            android:id="@+id/card_hydration_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/header_card_background"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hydration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_hydration_enabled_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/tv_hydration_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_hydration_enabled_summary"
                    android:textSize="13sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_hydration_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:contentDescription="@string/reminders_enabled" />

        </LinearLayout>

        <!-- Hydration: Interval Card (separate section) -->
        <LinearLayout
            android:id="@+id/card_hydration_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_content_background"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_hydration_interval_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_hydration_interval_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_hydration_interval_instructions"
                android:textSize="13sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_hydration_interval_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pref_summary_hydration_interval"
                    android:textSize="14sp"
                    android:textColor="#4A90E2" />

                <Button
                    android:id="@+id/btn_edit_hydration_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_hydration_interval_button"
                    android:backgroundTint="#4A90E2"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/pref_hydration_interval_dialog" />

            </LinearLayout>

        </LinearLayout>

        <!-- Footer Decoration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_line_blue" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wellness_logo"
                app:tint="#4A90E2"
                android:contentDescription="@string/wellness_logo_desc"
                android:layout_marginHorizontal="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_line_blue" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
